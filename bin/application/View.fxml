<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ViewController">
   <center>
      <Pane fx:id="panel" prefHeight="400.0" prefWidth="400.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" layoutY="150.0" prefHeight="100.0" prefWidth="400.0" spacing="30.0">
               <children>
                  <Button fx:id="red" mnemonicParsing="false" onAction="#detectarR" text="Rojo" />
                  <Button fx:id="green" mnemonicParsing="false" onAction="#detectarG" text="Verde" />
                  <Button fx:id="blue" mnemonicParsing="false" onAction="#detectarB" text="Azul" />
               </children>
            </HBox>
         </children>
      </Pane>
   </center>
</BorderPane>
